<div class="header">
  <ul class="nav nav-pills pull-right" role="tablist">
    <li role="presentation" <% if yield(:title) == "Home" %> class="active" <% end %>><a href="/">Home</a></li>
    <li role="presentation" <% if yield(:title) == "About" %> class="active" <% end %>><a href="/about">About</a></li>
    <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
    <% else %>
        <li role="presentation" <% if yield(:title) == "Login" %> class="active" <% end %>><a href="/login">Login</a></li>
    <% end %>
  </ul>
  <h3 class="text-muted">Blog</h3>
</div>